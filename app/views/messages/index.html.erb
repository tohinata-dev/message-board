<div class="container">
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">
                メッセージ一覧
            </div>
            
            <div class="panel-body">
                <% @messages.each do |message| %>
                    <span class="label label-info col-md-2"><%= message.name %></span>
                    <span class="col-md-10"><%= message.body %></span>
                    <br>
                <% end %>
            </div>
        </div>
    
    </div>
    <div class="row">    
        <%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
        
            <!--
            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" id="inputEmail3" placeholder="Email">
                </div>
            </div>-->
            
            <div class="form-group">
                <label class="col-md-1 control-label">名前</label>
                <div class="col-md-11">
                  <%= f.text_field :name , :class => "form-control" %>
                </div>
            </div>
            
            <div class="form-group">
                <label class="col-md-1 control-label">内容</label>
                <div class="col-md-11">
                    <%= f.text_area:body , :class => "form-control" %>
                </div>
            </div>
            </div class="form-group">
                <%= f.submit class:"btn btn-sm btn-primary col-md-12" %>
            </div>
        <% end %>
    </div>
</div>