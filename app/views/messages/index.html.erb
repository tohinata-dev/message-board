<div class="container">
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">
                メッセージ一覧
            </div>
            
            <div class="panel-body">
                <% @messages.each do |message| %>
                    <span class="label label-info col-md-2"><%= message.name %></span>
                    <span class="col-md-10"><%= message.body %></span>
                    (<%= link_to "edit" , edit_message_path(message) %>
                     <%= link_to "destory" , message ,method: :delete, data: {confirm:'削除してもよろしいですか？'} %>)
                    
                    <br>
                <% end %>
            </div>
        </div>
    
    </div>
    <div class="row">
        <!--部分テンプレートを読み込んでいる-->
        <%= render 'form' %>
    </div>
</div>